<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Nome do Personagem"/></h1>
      <div class="resource-row">
        <div class="resource">
          <label class="resource-label">{{localize "CDT.Raca"}}</label>
          <input type="text" name="system.raca" value="{{system.raca}}" placeholder="Ra√ßa"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "CDT.Classe"}}</label>
          <input type="text" name="system.classe" value="{{system.classe}}" placeholder="Classe"/>
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "CDT.Nivel"}}</label>
          <input type="number" name="system.nivel.value" value="{{system.nivel.value}}" min="1" max="10"/>
        </div>
      </div>
      <div class="resource-row">
        <div class="resource">
          <label class="resource-label">{{localize "CDT.Experiencia"}}</label>
          <input type="number" name="system.nivel.xp" value="{{system.nivel.xp}}" min="0"/>
          <span>/ {{system.nivel.xpProximo}}</span>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="principal">Principal</a>
    <a class="item" data-tab="habilidades">Habilidades</a>
    <a class="item" data-tab="magias">Magias</a>
    <a class="item" data-tab="equipamentos">Equipamentos</a>
    <a class="item" data-tab="biografia">Biografia</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Principal Tab --}}
    <div class="tab principal" data-group="primary" data-tab="principal">
      <div class="grid grid-2col">
        
        {{!-- Atributos --}}
        <div class="atributos">
          <h3>{{localize "CDT.Atributos"}}</h3>
          <div class="atributo-grid">
            <div class="atributo">
              <label>{{localize "CDT.Fisico"}}</label>
              <div class="atributo-container">
                <input type="number" name="system.fisico.value" value="{{system.fisico.value}}" min="1" max="10" data-dtype="Number"/>
                <button type="button" class="attribute-roll cdt-tooltip" data-attribute="fisico" 
                        data-tooltip="Clique para rolar teste de F√≠sico">
                  <i class="fas fa-dice-d6"></i>
                </button>
              </div>
            </div>
            <div class="atributo">
              <label>{{localize "CDT.Acao"}}</label>
              <div class="atributo-container">
                <input type="number" name="system.acao.value" value="{{system.acao.value}}" min="1" max="10" data-dtype="Number"/>
                <button type="button" class="attribute-roll cdt-tooltip" data-attribute="acao" 
                        data-tooltip="Clique para rolar teste de A√ß√£o">
                  <i class="fas fa-dice-d6"></i>
                </button>
              </div>
            </div>
            <div class="atributo">
              <label>{{localize "CDT.Mental"}}</label>
              <div class="atributo-container">
                <input type="number" name="system.mental.value" value="{{system.mental.value}}" min="1" max="10" data-dtype="Number"/>
                <button type="button" class="attribute-roll cdt-tooltip" data-attribute="mental" 
                        data-tooltip="Clique para rolar teste de Mental">
                  <i class="fas fa-dice-d6"></i>
                </button>
              </div>
            </div>
            <div class="atributo">
              <label>{{localize "CDT.Social"}}</label>
              <div class="atributo-container">
                <input type="number" name="system.social.value" value="{{system.social.value}}" min="1" max="10" data-dtype="Number"/>
                <button type="button" class="attribute-roll cdt-tooltip" data-attribute="social" 
                        data-tooltip="Clique para rolar teste de Social">
                  <i class="fas fa-dice-d6"></i>
                </button>
              </div>
            </div>
          </div>
        </div>

        {{!-- Recursos --}}
        <div class="recursos">
          <h3>{{localize "CDT.Recursos"}}</h3>
          
          {{!-- Pontos de Vida --}}
          <div class="resource">
            <label class="resource-label">
              <span class="cdt-status-indicator {{statusHealth}}"></span>
              {{localize "CDT.PontosVida"}}
            </label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.pv.value" value="{{system.pv.value}}" min="0" max="{{system.pv.max}}" data-dtype="Number"/>
              <span> / </span>
              <input type="number" name="system.pv.max" value="{{system.pv.max}}" min="1" data-dtype="Number"/>
            </div>
            <div class="resource-bar">
              <div class="resource-bar-fill {{#if (lt system.pv.value (div system.pv.max 4))}}low{{/if}}" 
                   style="width: {{mult (div system.pv.value system.pv.max) 100}}%"></div>
              <div class="resource-bar-text">{{system.pv.value}}/{{system.pv.max}}</div>
            </div>
          </div>

          {{!-- Pontos de Magia --}}
          <div class="resource">
            <label class="resource-label">{{localize "CDT.PontosMagia"}}</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.pm.value" value="{{system.pm.value}}" min="0" max="{{system.pm.max}}" data-dtype="Number"/>
              <span> / </span>
              <input type="number" name="system.pm.max" value="{{system.pm.max}}" min="0" data-dtype="Number"/>
            </div>
            <div class="resource-bar">
              <div class="resource-bar-fill" style="width: {{mult (div system.pm.value system.pm.max) 100}}%"></div>
              <div class="resource-bar-text">{{system.pm.value}}/{{system.pm.max}}</div>
            </div>
          </div>

          {{!-- Defesa --}}
          <div class="resource">
            <label class="resource-label cdt-tooltip" data-tooltip="Defesa = 10 + A√ß√£o + Armadura + Escudo + Outros">
              {{localize "CDT.Defesa"}}
            </label>
            <div class="resource-content flexrow flex-center flex-between">
              <span class="resource-value">{{system.defesa.value}}</span>
              <span class="resource-formula">(10 + {{system.acao.value}} + {{system.defesa.armadura}} + {{system.defesa.escudo}})</span>
            </div>
          </div>

          {{!-- Carga --}}
          <div class="resource">
            <label class="resource-label">
              {{localize "CDT.Carga"}} 
              <span class="encumbrance-status {{encumbrance}}">
                {{#eq encumbrance "over-encumbered"}}‚ö†Ô∏è{{/eq}}
                {{#eq encumbrance "heavily-loaded"}}üì¶{{/eq}}
              </span>
            </label>
            <div class="resource-content flexrow flex-center flex-between">
              <span class="resource-value">{{system.recursos.carga.atual}}kg</span>
              <span>/ {{system.recursos.carga.max}}kg</span>
            </div>
            <div class="resource-bar">
              <div class="resource-bar-fill {{#if (gte (div system.recursos.carga.atual system.recursos.carga.max) 0.75)}}low{{/if}}" 
                   style="width: {{mult (div system.recursos.carga.atual system.recursos.carga.max) 100}}%"></div>
            </div>
          </div>

          {{!-- Bot√µes de Descanso --}}
          <div class="rest-buttons">
            <button type="button" class="quick-rest cdt-tooltip" data-tooltip="Recupera metade dos PV e PM">
              <i class="fas fa-bed"></i> Descanso R√°pido
            </button>
            <button type="button" class="long-rest cdt-tooltip" data-tooltip="Recupera todos os PV e PM">
              <i class="fas fa-moon"></i> Descanso Longo
            </button>
          </div>
        </div>
      </div>

      {{!-- Moedas --}}
      <div class="moedas">
        <h3>{{localize "CDT.Moedas"}}</h3>
        <div class="moeda-grid">
          <div class="moeda">
            <label>{{localize "CDT.Cobre"}}</label>
            <input type="number" name="system.recursos.moedas.cobre" value="{{system.recursos.moedas.cobre}}" min="0" data-dtype="Number"/>
          </div>
          <div class="moeda">
            <label>{{localize "CDT.Prata"}}</label>
            <input type="number" name="system.recursos.moedas.prata" value="{{system.recursos.moedas.prata}}" min="0" data-dtype="Number"/>
          </div>
          <div class="moeda">
            <label>{{localize "CDT.Ouro"}}</label>
            <input type="number" name="system.recursos.moedas.ouro" value="{{system.recursos.moedas.ouro}}" min="0" data-dtype="Number"/>
          </div>
        </div>
      </div>
    </div>

    {{!-- Habilidades Tab --}}
    <div class="tab habilidades" data-group="primary" data-tab="habilidades">
      <div class="items-header">
        <h3>{{localize "CDT.Habilidades"}}</h3>
        <a class="item-control" data-action="create" data-type="habilidade" title="Criar Habilidade">
          <i class="fas fa-plus"></i>
        </a>
      </div>
      <ol class="items-list">
        {{#each habilidades as |item id|}}
        <li class="item flexrow {{#unless item.canUse}}disabled{{/unless}}" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <div class="item-image">
              <a class="rollable" data-roll-type="habilidade" data-item-id="{{item._id}}"
                 title="{{#if item.canUse}}Clique para usar{{else}}Pr√©-requisitos n√£o atendidos{{/if}}">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              </a>
            </div>
            <h4>{{item.name}}
              {{#if item.system.passiva}}<small>(Passiva)</small>{{/if}}
              {{#unless item.canUse}}<small class="prereq-warning">‚ö†Ô∏è</small>{{/unless}}
            </h4>
          </div>
          <div class="item-attribute">{{capitalize item.system.atributo}}</div>
          <div class="item-bonus">{{signedNumber item.system.bonus}}</div>
          <div class="item-controls">
            <a class="item-control" data-action="edit" title="Editar Item">
              <i class="fas fa-edit"></i>
            </a>
            <a class="item-control" data-action="delete" title="Deletar Item">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Magias Tab --}}
    <div class="tab magias" data-group="primary" data-tab="magias">
      <div class="items-header">
        <h3>{{localize "CDT.Magias"}} 
          <small>(PM: {{system.pm.value}}/{{system.pm.max}})</small>
        </h3>
        <a class="item-control" data-action="create" data-type="magia" title="Criar Magia">
          <i class="fas fa-plus"></i>
        </a>
      </div>
      <ol class="items-list">
        {{#each magias as |item id|}}
        <li class="item flexrow {{#if (gt item.system.custoMP ../system.pm.value)}}insufficient-mp{{/if}}" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <div class="item-image">
              <a class="rollable" data-roll-type="magia" data-item-id="{{item._id}}"
                 title="{{#if (gte ../system.pm.value item.system.custoMP)}}Clique para conjurar{{else}}MP insuficiente{{/if}}">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              </a>
            </div>
            <h4>{{item.name}}
              {{#if (gt item.system.custoMP ../system.pm.value)}}<small class="mp-warning">‚ö°</small>{{/if}}
            </h4>
          </div>
          <div class="item-school">{{capitalize item.system.escola}}</div>
          <div class="item-level">N√≠vel {{item.system.nivel}}</div>
          <div class="item-cost">{{item.system.custoMP}} PM</div>
          <div class="item-controls">
            <a class="item-control" data-action="edit" title="Editar Item">
              <i class="fas fa-edit"></i>
            </a>
            <a class="item-control" data-action="delete" title="Deletar Item">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>

    {{!-- Equipamentos Tab --}}
    <div class="tab equipamentos" data-group="primary" data-tab="equipamentos">
      <div class="items-header">
        <h3>{{localize "CDT.Equipamentos"}}</h3>
        <div class="equipment-actions">
          <a class="item-control" data-action="create" data-type="arma" title="Criar Arma">
            <i class="fas fa-sword"></i>
          </a>
          <a class="item-control" data-action="create" data-type="armadura" title="Criar Armadura">
            <i class="fas fa-shield-alt"></i>
          </a>
          <a class="item-control" data-action="create" data-type="equipamento" title="Criar Equipamento">
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
      
      {{!-- Armas --}}
      <div class="items-section">
        <h4><i class="fas fa-sword"></i> Armas</h4>
        <ol class="items-list">
          {{#each armas as |item id|}}
          <li class="item flexrow {{#unless item.system.equipado}}unequipped{{/unless}}" data-item-id="{{item._id}}">
            <div class="item-name flexrow">
              <div class="item-image">
                <a class="rollable" data-roll-type="arma" data-item-id="{{item._id}}"
                   title="{{#if item.system.equipado}}Clique para atacar{{else}}Arma n√£o equipada{{/if}}">
                  <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-damage cdt-tooltip" data-tooltip="Dano da arma">{{item.system.dano}}</div>
            <div class="item-equipped">
              <input type="checkbox" class="item-toggle" {{checked item.system.equipado}} 
                     title="Equipar/Desequipar"/>
            </div>
            <div class="item-controls">
              <a class="item-control" data-action="edit" title="Editar Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control" data-action="delete" title="Deletar Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Armaduras --}}
      <div class="items-section">
        <h4><i class="fas fa-shield-alt"></i> Armaduras & Escudos</h4>
        <ol class="items-list">
          {{#each armaduras as |item id|}}
          <li class="item flexrow {{#unless item.system.equipado}}unequipped{{/unless}}" data-item-id="{{item._id}}">
            <div class="item-name flexrow">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-defense cdt-tooltip" data-tooltip="B√¥nus de defesa">+{{item.system.defesa}}</div>
            <div class="item-equipped">
              <input type="checkbox" class="item-toggle" {{checked item.system.equipado}} 
                     title="Equipar/Desequipar"/>
            </div>
            <div class="item-controls">
              <a class="item-control" data-action="edit" title="Editar Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control" data-action="delete" title="Deletar Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
          {{#each escudos as |item id|}}
          <li class="item flexrow {{#unless item.system.equipado}}unequipped{{/unless}}" data-item-id="{{item._id}}">
            <div class="item-name flexrow">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              </div>
              <h4>{{item.name}} (Escudo)</h4>
            </div>
            <div class="item-defense cdt-tooltip" data-tooltip="B√¥nus de defesa">+{{item.system.defesa}}</div>
            <div class="item-equipped">
              <input type="checkbox" class="item-toggle" {{checked item.system.equipado}} 
                     title="Equipar/Desequipar"/>
            </div>
            <div class="item-controls">
              <a class="item-control" data-action="edit" title="Editar Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control" data-action="delete" title="Deletar Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Po√ß√µes --}}
      {{#if pocoes}}
      <div class="items-section">
        <h4><i class="fas fa-flask"></i> Po√ß√µes</h4>
        <ol class="items-list">
          {{#each pocoes as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name flexrow">
              <div class="item-image">
                <a class="rollable" data-roll-type="pocao" data-item-id="{{item._id}}"
                   title="Clique para usar">
                  <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                </a>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-type">{{capitalize item.system.tipo}}</div>
            <div class="item-quantity">{{item.system.quantidade}}</div>
            <div class="item-controls">
              <a class="item-control" data-action="edit" title="Editar Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control" data-action="delete" title="Deletar Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>
      {{/if}}

      {{!-- Outros Equipamentos --}}
      <div class="items-section">
        <h4><i class="fas fa-backpack"></i> Outros Equipamentos</h4>
        <ol class="items-list">
          {{#each equipamentos as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name flexrow">
              <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              </div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-quantity">{{item.system.quantidade}}</div>
            <div class="item-weight">{{item.system.peso}}kg</div>
            <div class="item-controls">
              <a class="item-control" data-action="edit" title="Editar Item">
                <i class="fas fa-edit"></i>
              </a>
              <a class="item-control" data-action="delete" title="Deletar Item">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Dropzone para Drag & Drop --}}
      <div class="dropzone">
        <p><i class="fas fa-download"></i> Arraste itens dos comp√™ndios para c√°</p>
      </div>
    </div>

    {{!-- Biografia Tab --}}
    <div class="tab biografia" data-group="primary" data-tab="biografia">
      <div class="biografia-section">
        <label>{{localize "CDT.Antecedente"}}</label>
        <input type="text" name="system.antecedente" value="{{system.antecedente}}" placeholder="Antecedente do personagem"/>
      </div>
      <div class="biografia-section">
        <label>{{localize "CDT.Aparencia"}}</label>
        <textarea name="system.detalhes.aparencia" placeholder="Descreva a apar√™ncia do personagem">{{system.detalhes.aparencia}}</textarea>
      </div>
      <div class="biografia-section">
        <label>{{localize "CDT.Personalidade"}}</label>
        <textarea name="system.detalhes.personalidade" placeholder="Descreva a personalidade do personagem">{{system.detalhes.personalidade}}</textarea>
      </div>
      <div class="biografia-section">
        <label>{{localize "CDT.Historia"}}</label>
        <textarea name="system.detalhes.historia" placeholder="Conte a hist√≥ria do personagem">{{system.detalhes.historia}}</textarea>
      </div>
      <div class="biografia-section">
        <label>{{localize "CDT.Biografia"}}</label>
        <div class="editor-content" data-edit="system.detalhes.biografia">{{{enrichedBiography}}}</div>
      </div>
    </div>

  </section>
</form> 